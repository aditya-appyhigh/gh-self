{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}